<%- include('../layout/header.ejs') %>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../layout/sidebar.ejs') %>
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header sticky-element bg-label-secondary d-flex justify-content-sm-between align-items-sm-center flex-column flex-sm-row">
                                        <h5 class="card-title mb-sm-0 me-2">Edit Carousel Banner</h5>
                                        <div class="action-btns">
                                            <a href="/view-banner" class="btn btn-dark">Back</a>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <form method="post" action="/edit-banner" enctype="multipart/form-data">
                                            <input type="hidden" name="id" value="<%= editbanner._id %>">
                                            <div class="row">
                                                <div class="col-lg-8 mx-auto">
                                                    <div class="row g-3">
                                                        <div class="col-md-12">
                                                            <label class="form-label" for="title">Title</label>
                                                            <input type="text" id="title" name="title" class="form-control" value="<%= editbanner.title %>" required/>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <label class="form-label" for="description">Description</label>
                                                            <textarea id="description" name="description" class="form-control" rows="3"><%= editbanner.description %></textarea>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="form-label" for="order">Display Order</label>
                                                            <input type="number" id="order" name="order" class="form-control" value="<%= editbanner.order %>" min="0"/>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <label class="form-label">Current Image</label>
                                                            <div class="mb-3">
                                                                <img src="./assets/userImages/<%= editbanner.image %>" alt="Current Banner" style="max-width: 200px; height: auto;">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <label class="form-label" for="image">Update Image</label>
                                                            <input type="file" id="image" name="image" class="form-control" accept="image/*"/>
                                                            <small class="text-muted">Leave empty to keep current image</small>
                                                        </div>
                                                        <div class="col-12 text-center">
                                                            <button type="submit" class="btn btn-primary me-sm-3 me-1">Update</button>
                                                            <a href="/view-banner" class="btn btn-label-secondary">Cancel</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
<%- include('../layout/footer.ejs') %>