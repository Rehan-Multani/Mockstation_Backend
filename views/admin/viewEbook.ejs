<%- include('../layout/header.ejs') %>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../layout/sidebar.ejs') %>
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="py-3 mb-4">
                                        <span class="text-muted fw-light">Ebook /</span> View Ebook
                                    </h4>
                                    <div class="btnwrap mb-4">
                                        <a href="/add-ebook" class="btn btn-primary"><i class='bx bx-plus'></i>Add New Ebook</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover" id="list-table">
                                                <thead>
                                                    <tr>
                                                        <th>Sr No</th>
                                                        <th>Name</th>
                                                        <th>Language</th>
                                                        <th>Image</th>
                                                        <th>Link</th>
                                                        <th>is_Enable</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% let cnt=1 %>
                                                        <% ebook.forEach(function(allEbook){ %>
                                                            <tr>
                                                                <td class="align-center">
                                                                    <strong><%= cnt++ %></strong>
                                                                </td>
                                                                <td>
                                                                    <strong><%= allEbook.name %></strong>
                                                                </td>
                                                                <td>
                                                                    <strong><%= allEbook.language %></strong>
                                                                </td>
                                                                <td>
                                                                    <img src="./assets/userImages/<%= allEbook.image %>" alt="Ebook Cover" style="max-width: 100px; height: auto;">
                                                                </td>
                                                                <td>
                                                                    <a href="<%= allEbook.link %>" target="_blank" class="btn btn-primary btn-sm">Open Link</a>
                                                                </td>
                                                                <% if (loginData.is_admin == 1) { %>
                                                                    <td class="pe-0">
                                                                        <form action="/ebook-is-active/<%= allEbook._id %>/toggle" id="featureForm" method="POST">
                                                                            <a id="toggleButton" >
                                                                                <div class="form-check form-switch mb-0">
                                                                                    <input type="hidden" name="title" value="<%= allEbook.name %>"/>
                                                                                    <input class="form-check-input" type="checkbox" name="is_active" <% if(allEbook.is_active == 1) { %> checked <% }else{} %>>
                                                                                </div>
                                                                            </a>
                                                                        </form>                   
                                                                    </td>
                                                                    <td>
                                                                        <div class="d-flex gap-3">
                                                                            <a href="/edit-ebook?id=<%= allEbook._id %>"class="text-success me-3"><i class="bx bx-edit-alt"></i></a>
                                                                            <a href="/delete-ebook?id=<%= allEbook._id %>" onclick="return confirm('Are you sure want to delete this <%= allEbook.name %>' )" class="text-danger me-3"><i class="bx bx-trash"></i></a>
                                                                        </div>
                                                                    </td>
                                                                    <% } else { %>
                                                                    <td>
                                                                        <div class="form-check form-switch mb-0" onclick="alert('You have no access to change status..!!')">
                                                                            <input class="form-check-input" type="checkbox" name="is_active"  <% if(allEbook.is_active==1) { %> checked <% }else{} %>disabled>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="d-flex gap-3">
                                                                            <a href="/edit-ebook?id=<%= allEbook._id %>" class="text-success me-3"><i class="bx bx-edit-alt"></i></a>
                                                                            <a href="" onclick="return alert('You have no access to delete <%= allEbook.name %>.' )" class="text-danger"><i class="bx bx-trash"></i></a>
                                                                        </div>
                                                                    </td>
                                                                    <%  }%>
                                                                </tr>
                                                            <% }); %>
                                                        </tbody>
                                                    <table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
<script type="text/javascript">
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    
    checkboxes.forEach(function (checkbox) {
        checkbox.addEventListener('click', function (event) {
            const form = checkbox.closest('form');  // Get the closest form element related to the checkbox

            if (form) {
                const fieldName = form.querySelector('[name="title"]').value;  // Get the name or title value

                // Prompt the user for confirmation based on the checkbox action
                const action = checkbox.checked ? 'Enable' : 'Disable';
                if (!confirm(`Are you sure you want to ${action} ${fieldName}?`)) {
                    // Prevent checkbox from changing its checked state if cancelled
                    event.preventDefault();
                    return;
                }

                // Prepare FormData for AJAX request
                const formData = new FormData(form);
                
                // Send the AJAX POST request
                $.ajax({
                    type: "POST",
                    url: form.action,  // Use the form action URL dynamically
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        console.log('Success:', data);  // Log success response
                    },
                    error: function (error) {
                        console.error('Error:', error);  // Log any errors
                    }
                });
            }
        });
    });
</script>

<%- include('../layout/footer.ejs') %> 