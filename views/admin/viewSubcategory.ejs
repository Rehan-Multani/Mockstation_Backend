<%- include('../layout/header.ejs') %>
<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
        <%- include('../layout/sidebar.ejs') %>
        <div class="content-wrapper">
            <div class="container-xxl flex-grow-1 container-p-y">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="py-3 mb-4">
                                <span class="text-muted fw-light">Subcategory /</span> View Subcategory
                            </h4>
                            <div class="btnwrap mb-4">
                                <a href="/add-subcategory" class="btn btn-primary"><i class='bx bx-plus'></i>Add New Subcategory</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover" id="list-table">
                                        <thead>
                                            <tr>
                                                <th>Sr No</th>
                                                <th>Category</th>
                                                <th>Image</th>
                                                <th>Subcategory Name</th>
                                                <th>is_Enable</th>
                                                <th>is_feature</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% let cnt=1 %>
                                            <% subcategory.forEach(function(subcat){ %>
                                                <tr>
                                                    <td><strong><%= cnt++ %></strong></td>
                                                    <td><%= subcat.categoryId ? subcat.categoryId.name : '' %></td>
                                                    <td>
                                                        <img src="/assets/userImages/<%= subcat.image %>" alt="Image" class="rounded-circle" width="40" height="40">
                                                    </td>
                                                    <td><strong><%= subcat.name %></strong></td>
                                                    <td>
                                                        <div class="form-check form-switch mb-0">
                                                            <input class="form-check-input" type="checkbox" <% if(subcat.is_active == 1) { %> checked <% } %> disabled>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="form-check form-switch mb-2">
                                                            <input class="form-check-input" type="checkbox" <% if(subcat.is_feature == 1) { %> checked <% } %> disabled>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex gap-3">
                                                            <a href="/edit-subcategory?id=<%= subcat._id %>" class="text-success me-3"><i class="bx bx-edit-alt"></i></a>
                                                            <a href="/delete-subcategory?id=<%= subcat._id %>" onclick="return confirm('Are you sure want to delete this <%= subcat.name %>?')" class="text-danger me-3"><i class="bx bx-trash"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <%- include('../layout/footer.ejs') %> 