<%- include('../layout/header.ejs') %>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../layout/sidebar.ejs') %>
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="py-3 mb-4">
                                        <span class="text-muted fw-light">Carousel /</span> View Banners
                                    </h4>
                                    <div class="btnwrap mb-4">
                                        <a href="/add-banner" class="btn btn-primary"><i class='bx bx-plus'></i>Add New Banner</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover" id="list-table">
                                                <thead>
                                                    <tr>
                                                        <th>Sr No</th>
                                                        <th>Title</th>
                                                        <th>Description</th>
                                                        <th>Image</th>
                                                        <th>Order</th>
                                                        <th>Status</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% let cnt=1 %>
                                                        <% banner.forEach(function(allBanner){ %>
                                                            <tr>
                                                                <td class="align-middle">
                                                                    <strong><%= cnt++ %></strong>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <strong><%= allBanner.title %></strong>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= allBanner.description %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <img src="./assets/userImages/<%= allBanner.image %>" alt="Banner" style="max-width: 100px; height: auto;">
                                                                </td>
                                                                <td class="align-middle">
                                                                    <%= allBanner.order %>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <form action="/banner-is-active/<%= allBanner._id %>/toggle" method="POST">
                                                                        <div class="form-check form-switch">
                                                                            <input class="form-check-input" type="checkbox" 
                                                                                <%= allBanner.is_active ? 'checked' : '' %>>
                                                                        </div>
                                                                    </form>
                                                                </td>
                                                                <td class="align-middle">
                                                                    <div class="dropdown">
                                                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                                            <i class="bx bx-dots-vertical-rounded"></i>
                                                                        </button>
                                                                        <div class="dropdown-menu">
                                                                            <a class="dropdown-item" href="/edit-banner?id=<%= allBanner._id %>">
                                                                                <i class="bx bx-edit-alt me-1"></i> Edit
                                                                            </a>
                                                                            <a class="dropdown-item" href="/delete-banner?id=<%= allBanner._id %>" onclick="return confirm('Are you sure you want to delete this banner?')">
                                                                                <i class="bx bx-trash me-1"></i> Delete
                                                                            </a>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        <% }); %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
<%- include('../layout/footer.ejs') %>

<script>
    $(document).ready(function() {
        $('.form-check-input').change(function() {
            $(this).closest('form').submit();
        });
    });
</script>