<%- include('../layout/header.ejs') %>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../layout/sidebar.ejs') %>
            <div class="content-wrapper">
                <div class="container-xxl flex-grow-1 container-p-y">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="py-3">Key Verification</h4>
                            <div class="card mb-4">
                                <div class="card-body">
                                    <% if(typeof message !== 'undefined'){ %>
                                        <div class="alert alert-primary alert-dismissible" role="alert"><%= message %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    <% } %>
                                    <% if(flash.error.length > 0){ %>
                                        <div class="alert alert-danger alert-dismissible" role="alert">
                                            <%= flash.error %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    <% } %>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <% if(!decryptedKey) { %>
                                                <!-- Verification Form - Show only when no key exists -->
                                                <form action="/verification" method="post">
                                                    <div class="row mb-3">
                                                        <div class="col-sm-9">
                                                            <div class="input-group">
                                                                <input type="text" class="form-control" name="key" id="key" required placeholder="Enter Key">
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <button type="submit" class="btn btn-primary">Verify</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            <% } else { %>
                                                <!-- Display Key and Revoke Form - Show when key exists -->
                                                <div class="row mb-3">
                                                    <div class="col-sm-9">
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" value="<%= decryptedKey.replace(/.(?=.{3})/g, '*') %>" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <form action="/revoke" method="post" id="verifyKeyForm">
                                                            <button type="button" onclick="revokeKey()" class="btn btn-danger text-white"><i>Revoke</i><i class="ms-2 fa fa-trash"></i></button>
                                                        </form>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script type="text/javascript">
    function revokeKey(){
        if(confirm('Are you sure you want to revoke the key?')){
            document.getElementById('verifyKeyForm').submit();
        }
    }
</script>
<%- include('../layout/footer.ejs') %>